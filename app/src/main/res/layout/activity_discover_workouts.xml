<!-- activity_discover_workouts.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DiscoverWorkoutsActivity">

    <ImageView
        android:id="@+id/workoutImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_above="@+id/recommendedWorkoutTextView"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/recommendedWorkoutTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:text="Recommended Workout: 30 minutes of Cardio" />



</RelativeLayout>
